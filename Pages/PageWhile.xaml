<Page x:Class="PracWork9.Pages.PageWhile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PracWork9.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="PageWhile">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0"
                    Orientation="Vertical"
                    VerticalAlignment="Center">
            <TextBlock Text="Цикл While" 
                      Style="{StaticResource styleHeader}"/>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left">
                <TextBlock Text="X0="
                           Style="{StaticResource txtStyle}"/>
                <TextBox Name="txtX0"
                         Text="1"
                         Margin="5"
                           Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left">
                <TextBlock Text="XK="
                           Style="{StaticResource txtStyle}"/>
                <TextBox Name="txtXK"
                         Text="4"
                         Margin="5"
                           Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left">
                <TextBlock Text="DX="
                           Style="{StaticResource txtStyle}"/>
                <TextBox Name="txtDX"
                         Text="0,2"
                         Margin="5"
                           Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left">
                <TextBlock Text="A="
                           Style="{StaticResource txtStyle}"/>
                <TextBox Name="txtA"
                         Text="0,75"
                         Margin="5"
                           Width="100"/>
            </StackPanel>
        </StackPanel>
        <ListBox Grid.Row="1"
                 x:Name="lstTable"/>
        <DockPanel Grid.Row="2" 
                   HorizontalAlignment="Stretch">
            <Button Content="Вычислить"
                    Name="btnCalculate"
                    Click="btnCalculate_Click"
                    Margin="5" Height="30"
                    HorizontalAlignment="Center"/>
            <Button Content="Вперед"
                    Name="btnNext"
                    Click="btnNext_Click"
                    Margin="5" Height="30"
                    HorizontalAlignment="Right"/>
        </DockPanel>
    </Grid>
</Page>
